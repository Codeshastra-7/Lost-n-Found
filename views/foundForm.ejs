<%- include("partials/header") -%>

<section id="sell">
  <h4 class="sell-head">PLEASE REPORT FOUND ITEMS HERE</h4>
  <hr>
  
   <div class="sell-div">
    <form class="" action="/foundForm" method="post">
      <div class="select-category">
        <h5>SELECT CATEGORY</h5>
        <br>
  
        <div class="row">
          <div class="col-lg-6 col-sm-12">
            <input type="radio" id="electronics" name="category" value="electronics">
            <label for="electronics"> ELECTRONICS <i class="category-link fas fa-mobile-alt"></i></label><br>
          </div>
          <div class="col-lg-6 col-sm-12">
            <input type="radio" id="vehicles" name="category" value="vehicles">
            <label for="vehicles"> VEHICLES <i class="category-link fas fa-laptop"></i></label><br>
          </div>
          <div class="col-lg-6 col-sm-12">
            <input type="radio" id="wallets" name="category" value="wallets">
            <label for="wallets"> WALLETS <i class="category-link fas fa-tv"></i></label><br>
          </div>
          <div class="col-lg-6 col-sm-12">
            <input type="radio" id="briefcases" name="category" value="briefcases">
            <label for="briefcases"> BRIEFCASES <i class="category-link far fa-compass"></i></label><br>
          </div>
          <div class="col-lg-6 col-sm-12">
            <input type="radio" id="cards" name="category" value="cards">
            <label for="cards"> CARDS <i class="category-link fas fa-user-secret"></i> </label><br>
          </div>
          <div class="col-lg-6 col-sm-12">
            <input type="radio" id="others" name="category" value="others">
            <label for="others"> OTHERS <i class="category-link far fa-question-circle"></i></label><br>
          </div>
        </div>
      </div>
      <hr>
      <div class="product-details">
        <h5>INCLUDE SOME DETAILS</h5>
        <br>
  
        <label>PRODUCT DESCRIPTION</label>
        <textarea class="sell-input form-control" name="props" rows="5" cols="30"></textarea>
      </div>
      <hr>
      <div class="seller-details">
        <h5>INCLUDE YOUR DETAILS</h5>
        <br>
        <label>YOUR NAME</label>
        <input class="sell-input form-control" type="text" name="personName" autocomplete="off">
 
        <label>YOUR PHONE NUMBER</label>
        <input class="sell-input form-control" type="text" name="personPhone" autocomplete="off">
 
        <label>YOUR EMAIL</label>
        <input class="sell-input form-control" type="email" name="PersonEmail" autocomplete="off">
     </div>
     <hr>
     <div class="seller-button">
        <button class="btn sell-btn btn-primary" type="submit" name="button">POST</button>
     </div>
  </form>
  </div>
  
</section>

<%- include("partials/footer") -%>
